generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Message {
  id         Int      @id @default(autoincrement())
  timestamp  DateTime
  phone      String
  senderType String   
  operatorId String?  
  content    String
  actions    Json
  status     String?
  reason     String?
  jobType    String?  
  urgency    Int?
  channel    String   // "calls" or "texts"
}
